<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.rmd.ui.deadlines.DeadlinesFragment"
        android:label="Deadlines"
        tools:layout="@layout/fragment_deadlines" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.rmd.ui.map.MapFragment"
        android:label="Timetable Map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_mapList"
        android:name="com.example.rmd.ui.list.ListFragment"
        android:label="Timetable List"
        tools:layout="@layout/list_fragment" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.rmd.ui.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />
</navigation>